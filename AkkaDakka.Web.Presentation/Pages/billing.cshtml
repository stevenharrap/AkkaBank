@model AkkaBank.Web.Presentation.Models._LayoutModel
@{
    Layout = "~/Pages/Templates/_DoubleColumnLayout.cshtml";
}

@section LeftContent {
    <p>We want to make our customer pay for some of this fancy new kit!</p>

    <div class="row">
        <div class="col-6">
            <ul>
                <li>We want to charge account fees.</li>
                <li>The Customer Manager Actors are subscribed to the topic.</li>
                <li>The Admin Actor puts a message onto the bus under a specific topic.</li>
                <li>Each Customer Manager will send all his Customer Accounts to the Sender.</li>
                <li>The Admin Actor will stash all incoming customer accounts until a threshold is met (time).</li>
                <li>When the threshold is met the Admin Actor will change state and un-stash all for the received Customer Accounts.</li>
                <li>The Customer Accounts are sent to an AccountFeeActor Round-Robin router</li>
                <li>The AccountFeeActor will determine if an account has funds and then charge the account.</li>
            </ul>
        </div>
        <div class="col-6">
            <div class="card">
                <img src="~/images/cluster/accountfees.jpg" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Distributing the bank</h5>
                    <ul class="card-text list-unstyled">
                        
                    </ul>
                </div>
            </div>
        </div>

    </div>
}

@section RightContent {
    <ul class="list-unstyled">
        <li>
            DEBUG Full Cluster
        </li>
        <li>
            VIEW BankAdminActor.cs
            <ul>
                <li>The Stashing concept</li>
                <li>Using Pub/Sub to start a request for all Customer Accounts</li>
                <li>Using a RoundRobinPool router to handle Customer Accounts</li>
            </ul>
        </li>
        <li>
            VIEW AccountFeeActor.cs
            <ul>
                <li>A Customer Account is charged by this Actor</li>
                <li>Determines if there is enough funds for an account fee</li>
            </ul>
        </li>
    </ul>
}